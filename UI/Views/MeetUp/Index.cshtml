@model UI.Models.MeetUpModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<link href="~/Content/meetup.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#sent">Sent requests</a></li>
    <li><a data-toggle="tab" href="#received">Received requests</a></li>
</ul>
<div class="meetup-container tab-content">

    <div id="sent" class="row tab-pane fade in active">
        @foreach (var item in ViewBag.SentRequest as List<Data.MeetUp>)
        {
            <div class="meetup-list">
                <ul class="event-list">
                    <li>
                        <img src="http://www.gravatar.com/avatar/bbe8907c4b1ff6229e0ee5e140d7ce04?s=47&d=http%3A%2F%2Fwww.techrepublic.com%2Fbundles%2Ftechrepubliccore%2Fimages%2Ficons%2Fstandard%2Ficon-user-default.png" />

                        <div class="info">
                            <h2 class="title">@Html.DisplayName(item.Guide.FirstName) @Html.DisplayName(item.Guide.LastName)</h2>
                            <p class="desc">Traveling to: @Html.DisplayName(item.City)</p>
                            <p class="desc">Travel date: @Html.DisplayName(item.StartDate.ToString(@"dd\/MM\/yyyy")) - @Html.DisplayName(item.FinishDate.ToString(@"dd\/MM\/yyyy"))</p>
                            <br />
                            <ul>
                                @if (item.GuideState.ToString() == "0" || item.GuideState.ToString() == "1" || item.GuideState.ToString() == "2")
                                {
                                    <li style="width:33%;">Status <span class="glyphicon glyphicon-question-sign"></span></li>
                                }
                                else if (item.GuideState.ToString() == "3" || item.GuideState.ToString() == "5")
                                {
                                    <li style="width:33%;">Status <span class="glyphicon glyphicon-ok"></span></li>
                                }
                                else
                                {
                                    <li style="width:33%;">Status <span class="glyphicon glyphicon-remove"></span></li>
                                }

                                <li style="width:34%;">Profile <span class="glyphicon glyphicon-user"></span></li>
                                <li style="width:33%;">Message <span class="glyphicon glyphicon-envelope"></span></li>
                            </ul>
                        </div>
                        <div class="social">
                            <ul>
                                <li class="approve"><a href="#"><span class="glyphicon glyphicon-remove"></span></a></li>
                                <li class="cancel"><a href="#"><span class="glyphicon glyphicon-ok"></span></a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        }
    </div>



    <div id="received" class="row tab-pane fade">
        @foreach (var item in ViewBag.ReceivedRequest as List<Data.MeetUp>)
        {
            <div class="meetup-list">
                <ul class="event-list">
                    <li>
                        <img src="http://www.gravatar.com/avatar/bbe8907c4b1ff6229e0ee5e140d7ce04?s=47&d=http%3A%2F%2Fwww.techrepublic.com%2Fbundles%2Ftechrepubliccore%2Fimages%2Ficons%2Fstandard%2Ficon-user-default.png" />

                        <div class="info">
                            <h2 class="title">@Html.DisplayName(item.Traveler.FirstName) @Html.DisplayName(item.Traveler.LastName)</h2>
                            <p class="desc">Traveling to: @Html.DisplayName(item.City)</p>
                            <p class="desc">Travel date: @Html.DisplayName(item.StartDate.ToString(@"dd\/MM\/yyyy")) - @Html.DisplayName(item.FinishDate.ToString(@"dd\/MM\/yyyy"))</p>
                            <br />
                            <ul>
                                @if (item.TravelerState.ToString() == "0" || item.TravelerState.ToString() == "1" || item.TravelerState.ToString() == "2")
                                {
                                    <li style="width:33%;">Status <span class="glyphicon glyphicon-question-sign"></span></li>
                                }
                                else if (item.TravelerState.ToString() == "3" || item.TravelerState.ToString() == "5")
                                {
                                    <li style="width:33%;">Status <span class="glyphicon glyphicon-ok"></span></li>
                                }
                                else
                                {
                                    <li style="width:33%;">Status <span class="glyphicon glyphicon-remove"></span></li>
                                }
                                <li style="width:34%;">Profile <span class="glyphicon glyphicon-user"></span></li>
                                <li style="width:33%;">Message <span class="glyphicon glyphicon-envelope"></span></li>
                            </ul>
                        </div>
                        <div class="social">
                            <ul>
                                <li class="approve"><a href="#"><span class="glyphicon glyphicon-remove"></span></a></li>
                                <li class="cancel"><a href="#"><span class="glyphicon glyphicon-ok"></span></a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        }
    </div>

</div>
