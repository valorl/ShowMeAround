@model UI.Models.MatchingModel
@{
    var Guide = Model.Match.Guide;
}
<br><br>
<div class="container-forms">
    <div class="container-fluid well">
        <div class="row">
            <div class="col-md-2">
                <img src="http://www.gravatar.com/avatar/bbe8907c4b1ff6229e0ee5e140d7ce04?s=47&d=http%3A%2F%2Fwww.techrepublic.com%2Fbundles%2Ftechrepubliccore%2Fimages%2Ficons%2Fstandard%2Ficon-user-default.png" width="100" height="100" class="img-circle">
            </div>

            <div class="col-md-4">
                @Html.DisplayName(Guide.FirstName) @Html.DisplayName(Guide.LastName)
                @Html.DisplayName(Guide.Gender.ToString())
                @Html.DisplayNameFor(m => m.Age.ToString())

            </div>

            <div class="col-md-4">
                @foreach (var item in Guide.Languages)
                {
                    @Html.DisplayName(item.Name)
                }

            </div>

            <div class="col-md-1">
                <div class="c100 p25 small center-block">
                    <span>@Html.DisplayNameFor(m => m.Match.Score.ToString())</span>
                    <div class="slice">
                        <div class="bar"></div>
                        <div class="fill"></div>
                    </div>
                </div>
                <input type="button" name="Send request" value="Send request" id="btnSendRequest" class="btn btn-primary btn-xs gradient center-block" />

            </div>
        </div>
    </div>
</div>